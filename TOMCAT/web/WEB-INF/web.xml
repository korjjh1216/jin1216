<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>08_radio.jsp</welcome-file>
        <welcome-file>07_login.jsp</welcome-file>
        <welcome-file>06_info.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>InfoServlet</servlet-name>
        <servlet-class>unit06.InfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>unit07.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RadioServlet</servlet-name>
        <servlet-class>unit08.RadioServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>InfoServlet</servlet-name>
        <url-pattern>/Info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RadioServlet</servlet-name>
        <url-pattern>/Radio</url-pattern>
    </servlet-mapping>
</web-app>